{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "dom"],
    "composite": true,
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "dist",
    "paths": {
      "@src/*": ["*"]
    },
    "types": ["reflect-metadata"],
    "noImplicitAny": false
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/e2e/**/*",
    "**/testing/**/*",
    "vitest.*.ts",
    "vitest.setup.ts"
  ],
  "references": [
    {
      "path": "../core"
    }
  ]
}
