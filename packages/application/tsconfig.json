{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "dom"],
    "composite": true,
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "dist",
    "paths": {
      "@src/*": ["*"],
      "@mocks/*": ["./testing/mocks/*"]
    },
    "types": ["reflect-metadata"],
    "noImplicitAny": false
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "include": ["src", "src/testing/mocks"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../core"
    }
  ]
}
